---
import { Icon } from "astro-icon/components";

type IconKey = "github" | "twitter" | "youtube";

interface Props {
  label: string;
  url: string;
  icon?: IconKey;
}

const { label, url, icon = "github" } = Astro.props;

const iconNames: Record<IconKey, string> = {
  github: "mdi:github",
  twitter: "simple-icons:x",
  youtube: "mdi:youtube",
};

const iconName = iconNames[icon] ?? iconNames.github;
---
<a class="contact__link" href={url} target="_blank" rel="noopener noreferrer">
  <Icon class="contact__icon" name={iconName} />
  <span>{label}</span>
</a>
